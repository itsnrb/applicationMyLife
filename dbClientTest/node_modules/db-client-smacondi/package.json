{
  "name": "db-client-smacondi",
  "version": "1.1.1",
  "description": "A Node client for managing database connections and account-based cluster routing, designed for MongoDB",
  "readme": "README.md",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js"
    }
  },
  "type": "module",
  "scripts": {
    "build:cjs": "babel src --out-dir dist/cjs --env-name cjs",
    "build:esm": "babel src --out-dir dist/esm --env-name esm",
    "build": "npm run clean && npm run build:cjs && npm run build:esm && ./create-package-files.sh",
    "clean": "rm -rf dist",
    "test": "npm run eslint && vitest run",
    "vitest": "vitest run",
    "eslint": "eslint",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "prepare": "npm run build",
    "package-audit": "npm-audit --low=0 --moderate=0 --high=0 --critical=0"
  },
  "author": {
    "email": "ops-smartcities@mvv.de",
    "name": "MVV Smacondi"
  },
  "license": "AGPL-3.0-or-later",
  "dependencies": {
    "axios": "^1.11.0",
    "lodash": "^4.17.21",
    "mongodb": "^6.18.0",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.28.3",
    "@babel/core": "^7.28.3",
    "@babel/plugin-transform-modules-commonjs": "^7.23.3",
    "@babel/preset-env": "^7.28.3",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.33.0",
    "jsdom": "^26.1.0",
    "npm-audit-pipeline": "^0.6.1",
    "vitest": "^3.2.4"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ]
}